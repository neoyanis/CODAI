// simulator/logic.js
// Version SAFE – compatible GitHub Pages

(function () {
  "use strict";

  console.log("logic.js chargé ✅");

  // Simulation logique simple (porte AND / OR / XOR)
  window.simulateLogic = function (inputA, inputB, gate = "AND") {
    inputA = Boolean(inputA);
    inputB = Boolean(inputB);

    let output;

    switch (gate) {
      case "AND":
        output = inputA && inputB;
        break;
      case "OR":
        output = inputA || inputB;
        break;
      case "XOR":
        output = inputA !== inputB;
        break;
      default:
        output = false;
    }

    return {
      A: inputA,
      B: inputB,
      gate: gate,
      Y: output
    };
  };

})();
